<ContentDialog x:Uid="AboutDlg"
    x:Class="SunMoon.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SunMoon.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Close"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick" Loaded="ContentDialog_Loaded">

    <Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="AppNameTxt" Text="Astro Calendar" FontSize="20" Margin="0,0,0,10" />
            <TextBlock Name="VerTxt" FontSize="16" Margin="0,0,0,15" />
            <TextBlock Name="AboutTxt" x:Uid="AboutApp" FontSize="14" Width="250" Margin="0,0,0,20" TextWrapping="WrapWholeWords"/>
            <HyperlinkButton Name="MyNameTxt" Content="Jarek Izotov, 2017" FontSize="18"
                             NavigateUri="ms-windows-store://publisher/?name=Jarek Izotov"/>
            <HyperlinkButton Name="PolicyTxt" x:Uid="PolicyTxt" FontSize="16" />
        </StackPanel>
    </Grid>
</ContentDialog>
